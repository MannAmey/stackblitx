# ===========================================
# RFID SERVER CONFIGURATION
# ===========================================
PORT=3003
NODE_ENV=development

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB connection (same as main system)
MONGODB_URI=mongodb://localhost:27017/rfid_system

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-rfid-server-jwt-secret-change-in-production
JWT_EXPIRES_IN=8h

# ===========================================
# FRONTEND URLS (CORS Configuration)
# ===========================================
# RFID Frontend (cafeteria interface)
RFID_FRONTEND_URL=http://localhost:5175

# Admin Frontend (for management)
ADMIN_FRONTEND_URL=http://localhost:5173

# Parent Frontend (for notifications)
PARENT_FRONTEND_URL=http://localhost:5174

# ===========================================
# RFID HARDWARE CONFIGURATION
# ===========================================
# ACR1252 USB Reader Configuration
RFID_READER_TYPE=ACR1252
RFID_READER_VENDOR_ID=0x072f
RFID_READER_PRODUCT_ID=0x2224

# Reader Settings
RFID_SCAN_TIMEOUT=5000
RFID_AUTO_RECONNECT=true
RFID_BEEP_ON_SCAN=true

# ===========================================
# CAFETERIA CONFIGURATION
# ===========================================
# Cafeteria Information
CAFETERIA_NAME=School Cafeteria
CAFETERIA_LOCATION=Main Building
STATION_ID=STATION_001

# Operating Hours
OPERATING_START_TIME=07:00
OPERATING_END_TIME=15:00

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
# WebSocket settings for real-time updates
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/rfid-server.log

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session timeout for cafeteria staff
SESSION_TIMEOUT=480

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Enable detailed RFID debugging
DEBUG_RFID=true

# Mock RFID reader for development (when no hardware available)
MOCK_RFID_READER=false

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Enable real-time notifications to other systems
ENABLE_NOTIFICATIONS=true

# Notification endpoints
NOTIFICATION_ENDPOINTS=http://localhost:3001/api/notifications,http://localhost:3002/api/notifications